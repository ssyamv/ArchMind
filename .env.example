# 应用配置
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# 日志配置
# 可选值: trace | debug | info | warn | error | silent
# 开发环境默认 debug，生产环境默认 info，测试环境默认 silent
LOG_LEVEL=debug

# PostgreSQL 数据库
DATABASE_URL=postgresql://chenqi@localhost:5432/archmind
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# AI 模型 API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key
OPENAI_API_KEY=your_openai_api_key
GOOGLE_API_KEY=your_google_api_key
GLM_API_KEY=your_glm_api_key
DASHSCOPE_API_KEY=your_dashscope_api_key
BAIDU_API_KEY=your_baidu_api_key
DEEPSEEK_API_KEY=your_deepseek_api_key

# Ollama 配置（本地模型）
OLLAMA_BASE_URL=http://localhost:11434

# JWT 认证配置
# 生产环境必须设置为强随机字符串（至少 32 个字符），否则存在安全风险
JWT_SECRET=your_jwt_secret_at_least_32_chars
# Token 有效期（支持格式：7d, 24h, 3600）
JWT_EXPIRES_IN=7d

# API Key 加密密钥（用于加密用户配置的第三方 API Key）
# 生产环境必须设置为一个强随机字符串（至少 32 个字符）
API_KEY_ENCRYPTION_SECRET=your_secure_random_secret_key_at_least_32_chars

# 文件上传配置
MAX_FILE_SIZE=10485760

# RAG 配置
EMBEDDING_MODEL=text-embedding-3-small
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K=5
SIMILARITY_THRESHOLD=0.7

# AI 生成配置
DEFAULT_MODEL=claude-3.5-sonnet
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=8000

# 对象存储配置
# 使用华为云 OBS
STORAGE_PROVIDER=huawei-obs

# 华为云 OBS 配置
# 华北-北京四区域: cn-north-4
# 华东-上海一区域: cn-east-3
# 华南-广州区域: cn-south-1
HUAWEI_OBS_REGION=cn-north-4
HUAWEI_OBS_ACCESS_KEY=your_huawei_obs_access_key
HUAWEI_OBS_SECRET_KEY=your_huawei_obs_secret_key
HUAWEI_OBS_BUCKET=archmind-documents

# 基础 URL
BASE_URL=http://localhost:3000

# ─────────────────────────────────────────────────────
# Sentry 错误监控（可选，不配置则不启用）
# ─────────────────────────────────────────────────────

# Sentry DSN（从 Sentry 项目设置 → Client Keys 获取）
# 服务端和前端共用同一个 DSN
# 留空或不设置 = 禁用 Sentry（本地开发推荐不设置）
SENTRY_DSN=

# 前端 Sentry DSN（Vite 构建时注入，需要 VITE_ 前缀才能在客户端读取）
# 与 SENTRY_DSN 填写相同值即可
VITE_SENTRY_DSN=

# Source Map 上传配置（仅 CI/CD 构建时需要）
# 从 Sentry 账号 → Settings → Auth Tokens 生成
SENTRY_AUTH_TOKEN=
# Sentry 组织 slug（URL 中的 org name）
SENTRY_ORG=your-sentry-org
# Sentry 项目 slug
SENTRY_PROJECT=archmind

# ─────────────────────────────────────────────────────
# 邮件服务配置（用于密码重置等功能）
# SMTP 服务器地址
EMAIL_HOST=smtp.qq.com
# SMTP 端口（465 为 SSL，587 为 TLS）
EMAIL_PORT=465
# 是否使用 SSL
EMAIL_SECURE=true
# SMTP 用户名（邮箱地址）
EMAIL_USER=your_email@qq.com
# SMTP 密码或授权码
EMAIL_PASS=your_smtp_password_or_auth_code
# 发件人地址（默认使用 EMAIL_USER）
EMAIL_FROM=your_email@qq.com
